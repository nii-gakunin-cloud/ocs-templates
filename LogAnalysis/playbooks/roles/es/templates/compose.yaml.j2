services:
  es:
    image: docker.elastic.co/elasticsearch/elasticsearch:${ES_VERSION}
    volumes:
      - esdata:/usr/share/elasticsearch/data
    ports:
      - {{ es_port }}:9200
    environment:
      - discovery.type=single-node
      - xpack.security.enabled=false
    restart: on-failure:3
    ulimits:
      memlock:
        soft: -1
        hard: -1
    healthcheck:
      test: ["CMD-SHELL", "curl -sf localhost:9200/_cluster/health || exit 1"]
      interval: 10s
      timeout: 10s
      retries: 10
  kibana:
    depends_on:
      es:
        condition: service_healthy
    image: docker.elastic.co/kibana/kibana:${ES_VERSION}
    ports:
      - {{ kibana_port }}:5601
    environment:
      - ELASTICSEARCH_HOSTS=http://es:9200
      - SECURITY_SHOWINSECURECLUSTERWARNING=false
    restart: on-failure:3
    healthcheck:
      test: ["CMD-SHELL", "curl -sI localhost:5601 | grep -q 'HTTP/1.1 302 Found'"]
      interval: 10s
      timeout: 10s
      retries: 10
volumes:
  esdata:
    driver: local
